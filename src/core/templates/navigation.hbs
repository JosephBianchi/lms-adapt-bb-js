{{! make the _globals object in course.json available to this template}}
{{import_globals}}
{{! All links in the nav bar should have an attribute of data-event, navigationView uses this to fire a global event}}
<div class="navigation-inner clearfix" role="navigation" aria-label="{{_globals._accessibility._ariaLabels.navigation}}">
    {{#if _accessibility._isSkipNavigationEnabled}}
        <button class="skip-nav-link a11y-ignore a11y-ignore-focus" data-event="skipNavigation" aria-label="{{_globals._accessibility._ariaLabels.skipNavigation}}">{{{_globals._accessibility.skipNavigationText}}}</button>
    {{/if}}
    <!-- custom code -->
    <button class="nav-button" type="button" onClick="location.href='#/id/5b241aea7c4380c30435cdb2'" name="button"><span class="button-text">Course Home</span><span class="button-icon"><img src="course/en/assets/icons/_ionicons_svg_ios-home.svg"/></span></button>
    <button class="nav-button" type="button" onClick="location.href='#/id/5b241aea7c4380c30435cdb1'" name="button"><span class="button-text">Course Content</span><span class="button-icon"><img src="course/en/assets/icons/_ionicons_svg_ios-list-box.svg"/></span></button>
    <!-- <button class="nav-button nav-overview" type="button" onClick="location.href='#/id/5b241aea7c4380c30435cdb2'" name="button"><span class="button-text">Overview</span><span class="button-icon"><img src="course/en/assets/icons/_ionicons_svg_ios-flash.svg"/></span></button> -->
    <button class="base navigation-back-button icon icon-controls-small-left" data-event="backButton" aria-label="{{_globals._accessibility._ariaLabels.previous}}"></button>
    <button class="navigation-drawer-toggle-button icon icon-search nav-button" data-event="toggleDrawer" aria-label="{{_globals._accessibility._ariaLabels.navigationDrawer}}"><span class="button-text"> Search...</span></button>
    <button class="nav-button navigation-next-button" data-event="nextLesson"><span class="button-text">Next</span><span class="button-icon"><img src="course/en/assets/icons/_ionicons_svg_ios-skip-forward.svg"/></span></button>
    <button class="nav-button navigation-prev-lesson-button" data-event="prevLesson"><span class="button-text">Previous</span><span class="button-icon"><img src="course/en/assets/icons/_ionicons_svg_ios-skip-backward.svg"/></span></button>
</div>
